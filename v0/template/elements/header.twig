<!-- ========== HEADER ========== -->
<header class="header flex flex-row justify-between">
  <div>
    <div class="header-inner">
      {% for item in breadcrumbs %}
        <svg version="1.1" style="width:0.5em;height:0.5em" viewBox="0 0 460 531">
          <polygon class="fill-white" points="0.5,0.5 459.5,265 0.5,530.5 0.5,445 100,265.5 0.5,85.5"/>
        </svg>
        <a href="{{ guideRootUrl }}/{{ item }}">{{ bookConfig.pages[item].title }}</a>
      {% endfor %}
    </div>
    {% if onThisPage|length > 0 %}
      <div class="mt-2 flex gap-x-2">
        {% for h2, h3list in onThisPage %}
          <a href="#{{ h2 }}" class="border border-white py-1 px-2 bg-white/10 rounded hover:bg-white/20 hover:no-underline">{{ h2 }}</a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <div class="mr-2">
    <div>
      <a class="btn btn-extra-small btn-primary" href="{{ env.guideRootUrl }}/../v0"><span class="text">v0</span></a>
      {# <a class="btn btn-extra-small btn-light" href="{{ env.guideRootUrl }}/../v1"><span class="text">v1</span></a> #}
    </div>
  </div>
  <div class="menu-button mx-2 cursor-pointer" onclick="toggleMenu()">
    <i class="fas fa-bars text-white"></i>
  </div>
</header>
<!-- ========== END HEADER ========== -->